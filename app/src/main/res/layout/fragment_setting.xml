<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_share"
        android:layout_marginBottom="150dp"
        android:text="Share app"
        android:background="@drawable/background_btn_setting"
        android:padding="10dp"
        android:drawableLeft="@drawable/icon_heart"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_send_require"
        android:drawableStart="@drawable/ic_headset_mic"
        android:layout_marginBottom="90dp"
        android:text="Need support?"
        android:padding="10dp"
        android:background="@drawable/background_btn_setting"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>




    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btn_logout"
        android:layout_marginBottom="30dp"
        android:text="Logout"
        android:background="@drawable/background_btn_setting"
        android:padding="10dp"
        android:drawableLeft="@drawable/baseline_sensor_door"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>