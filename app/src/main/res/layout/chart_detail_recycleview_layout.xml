<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background_chart_recycleview">

    <TextView
        android:id="@+id/id_chart_detail"
        android:layout_width="50dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="id"
        android:textStyle="bold"
        android:background="@drawable/background_textview_chart_recycleview"/>
    <TextView
        android:id="@+id/user_name_chart_detail"
        android:layout_width="200dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="admin"
        android:textStyle="bold"
        android:background="@drawable/background_textview_chart_recycleview"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:text="10"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/number_task_chart_detail"
        android:background="@drawable/background_textview_chart_recycleview"/>



</LinearLayout>